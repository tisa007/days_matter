<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#0000"
    android:orientation="horizontal"
    android:padding="3dip" >

    <TextView
        android:id="@+id/tv_top_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_item_left"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="17dip"
        android:paddingTop="5dip"
        android:shadowColor="#999"
        android:shadowDx="0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="0.2"
        android:textColor="#333"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/tv_top_remaind_days"
        android:layout_width="70dip"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_mid_blue"
        android:gravity="center"
        android:padding="3dip"
        android:shadowColor="#999"
        android:shadowDx="0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="0.2"
        android:text="0"
        android:textColor="#fff"
        android:textSize="25dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_top_unit"
        android:layout_width="40dip"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_right_blue"
        android:gravity="center"
        android:padding="5dip"
        android:shadowColor="#333"
        android:shadowDx="0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="0.2"
        android:text="å¤©"
        android:textColor="#fff"
        android:textSize="20dip" />

</LinearLayout>